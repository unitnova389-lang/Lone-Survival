local player = game.Players.LocalPlayer
local UserInputService = game:GetService("UserInputService")

local whitelistedUsers = {
	[3592721470] = true, -- m1sonchik
	[9253554436] = true, -- Me
	[9034504916] = true, -- DANYA
}

if not whitelistedUsers[player.UserId] then

	-- Block movement + input
	UserInputService.InputBegan:Connect(function(input)
		return Enum.ContextActionResult.Sink
	end)

	-- Black overlay GUI
	local screenGui = Instance.new("ScreenGui")
	screenGui.IgnoreGuiInset = true
	screenGui.ResetOnSpawn = false
	screenGui.Name = "WhitelistBlocker"
	screenGui.Parent = player:WaitForChild("PlayerGui")

	local bg = Instance.new("Frame")
	bg.Size = UDim2.new(1, 0, 1, 0)
	bg.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
	bg.BorderSizePixel = 0
	bg.Parent = screenGui

	-- Title
	local title = Instance.new("TextLabel")
	title.Size = UDim2.new(1, 0, 0, 60)
	title.Position = UDim2.new(0, 0, 0.15, 0)
	title.BackgroundTransparency = 1
	title.Text = "Not Whitelisted | Вход Запрещён"
	title.TextColor3 = Color3.fromRGB(255, 0, 0)
	title.TextScaled = true
	title.Font = Enum.Font.SourceSansBold
	title.Parent = bg

	-- Lore container
	local loreFrame = Instance.new("Frame")
	loreFrame.Size = UDim2.new(1, -40, 0.6, 0)
	loreFrame.Position = UDim2.new(0, 20, 0.25, 0)
	loreFrame.BackgroundTransparency = 1
	loreFrame.Parent = bg

	local layout = Instance.new("UIListLayout")
	layout.Parent = loreFrame
	layout.SortOrder = Enum.SortOrder.LayoutOrder
	layout.Padding = UDim.new(0, 10)

	-- Function to add lore lines
	local function addLore(text)
		local lbl = Instance.new("TextLabel")
		lbl.Size = UDim2.new(1, 0, 0, 40)
		lbl.BackgroundTransparency = 1
		lbl.TextWrapped = true
		lbl.Text = text
		lbl.TextColor3 = Color3.fromRGB(200, 200, 200)
		lbl.TextScaled = true
		lbl.Font = Enum.Font.SourceSansItalic
		lbl.Parent = loreFrame
	end

	-- Custom lore lines
	addLore("You fucking bitch, you're fucking nuts, bitch. We got your fucking IP and wait for the fucking cops.")
	addLore("If you think this is a mistake, open a ticket and we will remove your IP from our data and give you access.")
	addLore("Вам не разрешили доступ.")
	addLore("Сука ебанная блять, ты уже блять ахуел сучка. мы получили твой ебанный айпи и жди мусоров ебанных")
	addLore("Если вы думаете что это ошибка, откройте тикет и дадим вам доступ.")
	addLore("С любовью, создатель лоуна. | With Love, Founder of Lone Survival")

	return -- stop here if not whitelisted
end

