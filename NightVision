-- Night Vision + Sky Removed
local Lighting = game:GetService("Lighting")
local Workspace = game:GetService("Workspace")
local RunService = game:GetService("RunService")

-- Remove the Sky object only
for _, obj in pairs(Lighting:GetChildren()) do
    if obj:IsA("Sky") then
        obj:Destroy()
    end
end

-- Make terrain water fully visible
if Workspace:FindFirstChild("Terrain") then
    local terrain = Workspace.Terrain
    terrain.WaterTransparency = 0
    terrain.WaterReflectance = 0
    terrain.WaterWaveSize = 0
    terrain.WaterWaveSpeed = 0
end

-- Night vision loop
RunService.RenderStepped:Connect(function()
    Lighting.Brightness = 5                    -- bright world
    Lighting.Ambient = Color3.fromRGB(255,255,255)        -- full ambient
    Lighting.OutdoorAmbient = Color3.fromRGB(255,255,255) -- full outdoor ambient
    Lighting.ClockTime = 12                     -- midday lighting
    Lighting.FogStart = 0
    Lighting.FogEnd = 100000
    Lighting.GlobalShadows = false             -- remove shadows
end)
