-- Night Vision + Sky Removed (fixed brightness)
local Lighting = game:GetService("Lighting")
local Workspace = game:GetService("Workspace")
local RunService = game:GetService("RunService")

-- Remove the Sky object only
for _, obj in pairs(Lighting:GetChildren()) do
    if obj:IsA("Sky") then
        obj:Destroy()
    end
end

-- Make terrain water fully visible
if Workspace:FindFirstChild("Terrain") then
    local terrain = Workspace.Terrain
    terrain.WaterTransparency = 0
    terrain.WaterReflectance = 0
    terrain.WaterWaveSize = 0
    terrain.WaterWaveSpeed = 0
end

-- Night vision loop
RunService.RenderStepped:Connect(function()
    Lighting.Brightness = 2 -- normal bright, not blinding
    Lighting.Ambient = Color3.fromRGB(200, 200, 200)        -- soft gray light
    Lighting.OutdoorAmbient = Color3.fromRGB(200, 200, 200) -- balanced ambient
    Lighting.ClockTime = 14 -- afternoon (clear daylight look)
    Lighting.FogStart = 0
    Lighting.FogEnd = 100000
    Lighting.GlobalShadows = true -- keep shadows for depth
end)
